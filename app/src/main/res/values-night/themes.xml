<resources>
    <!-- Base application theme. -->
    <style name="Theme.Runnica2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/azul</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#FFFEFE</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/azul</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Runnica2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Runnica2.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.Runnica2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>